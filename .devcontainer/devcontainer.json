{
  "name": "CompaaS Dev Container",
  "dockerComposeFile": "compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "sleistner.vscode-fileutils",
        "bierner.markdown-mermaid",
        "DavidAnson.vscode-markdownlint",
        "GitHub.copilot",
        "scalameta.metals@prerelease",
        "vadimcn.vscode-lldb",
        "mutantdino.resourcemonitor",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "serayuzgur.crates",
        "jeff-hykin.better-cpp-syntax",
        "dtsvet.vscode-wasm",
        "svelte.svelte-vscode",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "EditorConfig.EditorConfig",
        "mhutchie.git-graph",
        "tilt-dev.Tiltfile",
        "tomoki1207.pdf"
      ],
      "settings": {
        "git.autofetch": true,
        "files.autoSave": "onFocusChange",
        "editor.formatOnSave": true,
        "resmon.show.cpufreq": false
      }
    }
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "profile": "complete"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/kubectl-helm-minikube": {},
    "./local-features/common-utils-extras": {},
    "./local-features/k9s": {},
    "./local-features/pulumi": {},
    "./local-features/tilt": {},
    "./local-features/webassembly-tools": {},
    "./local-features/graalvm": {},
    "./local-features/sbt": {},
    "./local-features/gum": {}
  },
  "overrideFeatureInstallOrder": ["./local-features/common-utils-extras"],
  "updateContentCommand": ".devcontainer/scripts/update.sh",
  "postCreateCommand": ".devcontainer/scripts/post-create.sh",
  "postStartCommand": "minikube status || minikube start"
}
