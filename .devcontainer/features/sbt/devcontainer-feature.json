{
  "id": "sbt",
  "name": "SBT (Scala Build Tool)",
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "Select sbt version"
    }
  },
  "containerEnv": {
    "JAVA_HOME": "$GRAALVM_HOME",
    "PATH": "$PATH:$GRAALVM_HOME/bin"
  },
  "installsAfter": ["./features/graalvm"]
}
